#

# On FreeBSD:
#   kldload snp
#   sudo watch p2 | idlechecker.pl

use strict;
use IO::Select;
use Getopt::Long;

my $timeout = 30; # mx.develooper.com is sloooow!
GetOptions("timeout=i" => \$timeout)
    or die "usage!";

my $s = IO::Select->new;
$s->add(\*STDIN);

while() {
    while() {
	my @ready = $s->can_read($timeout);
	if (!@ready) {
	    last;
	}
	<STDIN>;
    }

    system("alarm", "-nicedown");
    system("tkmessage", "-buttons", "Continue:100,Abort:101", "No output anymore on terminal for $timeout seconds!");
    my $st = $?/256;
    if ($st == 101) {
	last;
    }
}

__END__
