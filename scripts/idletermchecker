#

# On FreeBSD:
#   kldload snp
#   sudo watch p2 | idlechecker.pl

use strict;
use IO::Select;
use Getopt::Long;

my $timeout = 20;
GetOptions("timeout=i" => \$timeout)
    or die "usage!";

my $s = IO::Select->new;
$s->add(\*STDIN);

while() {
    my @ready = $s->can_read($timeout);
    if (!@ready) {
	last;
    }
    <STDIN>;
}

system("tkmessage", "No output anymore on terminal for $timeout seconds!");

__END__
